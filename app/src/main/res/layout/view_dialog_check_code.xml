<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:text="获取验证码前，请您先填写下面数字" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.yubin.wanapp.view.CheckView
            android:id="@+id/check_view"
            android:layout_width="70dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/et_check_code"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/bg_market_flag"
            android:digits="0123456789"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="16sp"
            tools:text="1345" />

    </LinearLayout>

    <View style="@style/line_horizontal_1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/negative_button"
            android:textColor="@color/colorPrimary" />

        <View style="@style/line_vertical_1dp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/positive_button"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</LinearLayout>
